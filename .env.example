DATABASE_URL="postgres://root:mysecretpassword@localhost:5432/local"

# Email Configuration (Gmail)
# Get app password from: https://myaccount.google.com/apppasswords
GMAIL_USER=your-email@gmail.com
# GMAIL_FROM=your-email@gmail.com
GMAIL_APP_PASSWORD=

# Application
PUBLIC_APP_NAME="Your App Name"
PUBLIC_BASE_URL=http://localhost:5173

# =====================================
# Storage Configuration
# =====================================
# Choose one storage provider and configure accordingly

# Local Storage (Default) - Perfect for development and VPS deployments
STORAGE_PROVIDER=local

# AWS S3 - Uncomment and configure for S3 storage
# STORAGE_PROVIDER=s3
# AWS_S3_BUCKET=my-app-uploads
# AWS_S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=AKIA...
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_PUBLIC_URL=https://cdn.example.com  # Optional: CloudFront URL

# Cloudflare R2 - Uncomment and configure for R2 storage
# STORAGE_PROVIDER=r2
# R2_ACCOUNT_ID=your-account-id
# R2_BUCKET=my-app-uploads
# R2_ACCESS_KEY_ID=your-access-key
# R2_SECRET_ACCESS_KEY=your-secret-key
# R2_PUBLIC_URL=https://pub-xxx.r2.dev  # Optional: Public bucket URL
